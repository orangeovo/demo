/* pages/auditList/auditList.wxss */

.cardInfo {
  width: 100%;
  display: flex;
  justify-content: space-between;
  background-color: #fff;
  flex-wrap: wrap;
  min-height: 130rpx;
  border-bottom: 4rpx solid #FAFAFA;
  align-items: center;
  padding: 20rpx;
  box-sizing: border-box;
}

.cardHead {
  display: flex;
  align-items: center;
}

.cardavater {
  width: 76rpx;
  height: 76rpx;
  text-align: center;
  line-height: 76rpx;
  border-radius: 10rpx;

}

.cardavater image {
  width: 100%;
  height: 100%;
}

.cardText {
  margin-left: 20rpx;
}

.cardName {
  color: #333333;
}

.cardCom {
  width: 300rpx;
  color: #A3A3A3;
  font-size: 26rpx;
}

.cardOsper .van-button {
  /* width: 150rpx;
  height: 70rpx; */
  border-radius: 20rpx;
}

.refuse {
  margin-right: 20rpx;
}

.passtext {
  color: #999999;
  font-size: 30rpx;
}

.restext {
  font-size: 30rpx;
  color: red;
}

.passCss {
  pointer-events: auto;
}

.forbid {
  pointer-events: none;
}