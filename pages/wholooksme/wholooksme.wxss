/* pages/wholooksme/wholooksme.wxss */

.date{
  font-size: 30rpx;
  color: #999;
  height: 75rpx;
  line-height: 75rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
}
.grouplist image{
  width: 76rpx;
  height: 76rpx;
  border: 1rpx solid #ddd;
  border-radius: 10rpx;
}
.groupitem{
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #fff;
  border-bottom: 1rpx solid #eee;
  padding: 0 30rpx;
  height: 130rpx;
  box-sizing: border-box;
}
.groupitem .info{
  display: flex;
  flex: 1;
  align-items: center;
}
.mesbox{
  margin-left: 20rpx;
}
.mesbox .name{
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333333;
}
.mesbox .position{
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #666666;
}
.transmit{
  width: 120rpx;
  height: 56rpx;
  background: #1559F3;
  border-radius: 10rpx;
  font-size: 28rpx;
  color: #fff;
  line-height: 56rpx;
  text-align: center;
}
.confirm{
  width: 120rpx;
  height: 56rpx;
  font-size: 28rpx;
  color: #FC9513;
  text-align: center;
  line-height: 56rpx;
}
.joinvip{
  width: 100%;
  height: 13vh;
  color: #fff;
  background: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}
.joinvip view{
  width: 630rpx;
  height: 88rpx;
  background: #1559F3;
  border-radius: 20rpx;
  text-align: center;
  line-height: 88rpx;
}
.transmit:active, .confirm:active, .joinvip:active{
  opacity: .7;
}
.mask{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 87vh;
  background: linear-gradient(#ffffff10,#fff);
  z-index: 999;
}
.textCard {
  /* margin-left: 20rpx; */
  text-align: center;
}

view .van-field__control {
  border: 2rpx solid #EEEEEE;
  color: #ccc;

}

view .van-field__word-limit {
  position: absolute;
  bottom: 30rpx;
  right: 36rpx;
}
.fieldtext .van-field__control {
  padding: 10rpx;
}
