/* pages/makecard/makecard.wxss */

.makecardfont1 {
    margin-top: 30rpx;
    font-size: 30rpx;
    color: rgba(153, 153, 153, 1);
    margin-left: 30rpx;
    margin-bottom: 20rpx;
}

.makecardfont2 {
    font-size: 26rpx;
    color: rgba(153, 153, 153, 1);
    margin-left: 30rpx;
}

.mcimgbox {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    margin-bottom: 30rpx;
}

.mcimg {
    width: 330rpx;
    height: 248rpx;
    margin-bottom: 10rpx;
    border-radius: 10rpx;
    border: 1rpx solid #eee;
    box-sizing: border-box;
}

.page {
    letter-spacing: 3rpx;

}


.uploadbox {
    background-color: white;
    margin-top: 20rpx;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;


}

.makecarduploadbox {
    height: 165rpx;
    width: 310rpx;
    margin-right: 30rpx;
    margin-top: 30rpx;
    border-radius: 10rpx;
    margin-left: 29rpx;
    margin-bottom: 20rpx;
}

.imfobox {
    background-color: white;
    padding-top: 30rpx;
    padding-bottom: 30rpx;
}

.infotitle {
    font-size: 30rpx;
    margin-right: 60rpx;
    line-height: 111rpx;
    margin-left: 31rpx;
}

.infoipt {
    font-size: 30rpx;
    width: 62vw;

}

.infoinputplaceholder {
    color: rgba(153, 153, 153, 1)
}

.locationicon {
    color: rgba(10, 163, 239, 1);
    font-size: 40rpx;
    margin-bottom: 10rpx;
}

.savecard {
    background-color: #1559F3;
    height: 88rpx;
    width: 630rpx;
    text-align: center;
    line-height: 88rpx;
    color: white;
    font-size: 32rpx;
    border-radius: 15rpx;
    margin-top: 53rpx;
    margin-bottom: 30rpx;
    margin-left: 60rpx;
}

.savecardpopup {
    height: 400rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-evenly;
}

.infoitem .van-button--small {
    color: #1559F3;
    background-color: #fff;
    border: 0rpx;
}

.makecard-map {
    height: 70vh;
}

.map_container {
    height: 300px;
    width: 100%;
}

.map {
    height: 100%;
    width: 100%;
}

.textarea {
    width: 750rpx;
}

.makecard_video {
    width: 100%;
    text-align: center;
    box-sizing: border-box;
    display: flex;
    justify-content: space-between;
}

video {
    width: 100%;
}

.upload-img {
    width: 330rpx;
    height: 248rpx;
}

.upload-box {
    background-color: #fff;
}

.tip,
.upload-box {
    padding: 30rpx;
    box-sizing: border-box;
}

.tip {
    padding-bottom: 10rpx;
}

.tishiText {
    padding: 20rpx 30rpx;
}

view .van-button--large {
    background-color: #1559F3 !important;
    color: #fff !important;
}

.tip-text {
    font-size: 26rpx;
    font-family: PingFang SC;
    font-weight: 500;
    color: #999999;
    line-height: 48rpx;
}

.htip_box {
    display: flex;
    align-items: center;
}

.tip-title {
    font-size: 30rpx;
    margin-bottom: 15rpx;
}

.tipIcon {
    margin-top: -16rpx;
    color: #FC9513;
    transform: rotate(180deg);

}

.video {
    width: 330rpx;
    height: 248rpx;
    margin-bottom: 10rpx;
    border-radius: 10rpx;
}

.label {
    color: #333333 !important;
}

.icon-dizhi1 {
    color: #1559F3;
}

/* 裁剪图片蒙版 */
.imgDisposeBlock {
    position: fixed;
    width: 100%;
    height: 100vh;
    z-index: 99;
}

.imgDisposeArea {
    height: 88vh;
    overflow: hidden;
}

.imgDisposeControlLine {
    height:12vh;
    display: flex;
    align-items: center;
    justify-content: space-around;
    background: rgba(0, 0, 0, 1);
    color: #fff;
}

.editBtn {
    width: 180rpx;
    height: 60rpx;
    text-align: center;
    line-height: 60rpx;
    border: 2rpx solid #fff;
    border-radius: 50rpx;
    font-size: 26rpx;
}

.address-icon {
    padding: 0 20rpx;
    margin-right: 20rpx;
}