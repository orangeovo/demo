/* pages/switchidentity/switchidentity.wxss */
.page{
  min-height: 100vh;
  width: 750rpx;
  box-sizing: border-box;
  padding: 50rpx 30rpx;
  display: flex;
  flex-direction: column;
}
.item{
  display: flex;
  flex-direction: row;
  background-color: rgb(255, 255, 255);
  align-items: center;
  height: 130rpx;
  border-radius: 10rpx;
  margin-bottom: 30rpx;
  box-sizing: border-box;
  padding-left: 30rpx;
  position: relative;
}
.default-icon{
  position: absolute!important;
  right: 0;
  top: 0;
}
.avatar{
  border-radius: 10rpx;
  overflow: hidden;
  margin-right: 20rpx;
  margin-left: 30rpx;
}
.info{
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
}
.name{
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333333;
}
.position{
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #666666;
}
.btn-group{
  margin-top: 30rpx;
  width: 690rpx;
  display: flex;
  justify-content: center;
}
.btn{
  width: 630rpx;
  height: 88rpx!important;
  border-radius: 20rpx!important;
}
