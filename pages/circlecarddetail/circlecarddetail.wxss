.sharebox{
    position: fixed;
    right: 0;
    bottom: 0;
    width: 0;
    height: 450rpx;
    background: #fff;
    border-radius: 20rpx 20rpx;
    z-index: 99;
    opacity: 0;
}
.sharetitle{
    position: relative;
    padding: 30rpx 0;
    border-bottom: 1rpx solid #eee;
}
.sharetitle>view:first-child{
    font-size: 34rpx;
    text-align: center;
}
.closeshare{
    position: absolute;
    top: 30rpx;
    right: 20rpx;
    color: #999;
    transform: scale(1.5,1.2);
    padding: 0 20rpx;
}
.sharebody{
    margin: 20rpx 100rpx;
    display: flex;
    justify-content: space-around;
}
.sharebody>view{
    text-align: center;
}
.sharebody>button{
    text-align: center;
    background: #fff;
    margin: 0;
    padding: 0;
}
.sharebody>button::after{
    border: 0;
}
.sharebody>button>view{
    height: 180rpx;
    font-size: 24rpx;
}
.mask{
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    background: rgba(0, 0, 0, .1);
    z-index: 9;
}
.swiper{
    width: 690rpx;
    height: 300rpx;
}
.swiper-item{
    width: 690rpx;
    border-radius: 20rpx 20rpx 0 0;
}
.introductioncover{
    position: absolute;
    width: 690rpx;
    height: 366rpx;
    background:linear-gradient(rgba(0, 0, 0, 0),rgb(250, 247, 247));
    top: 670rpx;
}
.iconbox{
    width: 40rpx;
    height: 40rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}
.default1{
    color: rgba(102, 102, 102);
    
}
.default2{
    color: rgb(253, 253, 8, 0.678);
    
    
}
.collect1{
    
    animation-name: collect1;
    animation-duration:0.3s;
    animation-fill-mode:forwards;
}
@keyframes collect1{
    from{}
    100%{font-size: 15rpx;color: rgba(102, 102, 102);}
    
}
.collect2{
   
    animation-name: collect2;
    animation-duration:0.3s;
    animation-fill-mode:forwards;
}
@keyframes collect2{
    from{font-size: 15rpx;}
    100%{font-size: 30rpx;color: rgbrgb(253, 253, 8, 0.678);}
    
}
.cancel1{
    
    animation-name: cancel1;
    animation-duration:0.3s;
    animation-fill-mode:forwards;
}
@keyframes cancel1{
    from{color: rgb(253, 253, 8, 0.678);}
    100%{font-size: 15rpx;color: rgb(253, 253, 8, 0.678);}
    
}
.cancel2{
    height: auto;
    animation-name: cancel2;
    animation-duration:0.3s;
    animation-fill-mode:forwards;
}
@keyframes cancel2{
    from{font-size: 15rpx;}
    100%{font-size: 30rpx;color: rgba(102, 102, 102);}
    
}


