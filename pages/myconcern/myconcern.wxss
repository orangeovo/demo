/* pages/myconcern/myconcern.wxss */
.page {

}
.add{
  display: flex;
  align-items: center;
}
.add .iconfont{
  color: #1559F3;
  margin-right: 10rpx;
}
.add .txt{
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #1559F3;
}

.concernbody{
  margin-top: 30rpx;
  background-color: #fff;
}
.concernbody .item{
  border-bottom: 1rpx solid #eee;
}

.icon-jia {
  margin: 0 10rpx 0 30rpx;
}

.addatten {
  display: flex;
  align-items: center;
}

.concernlist {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.avatar {
  width: 76rpx;
  height: 76rpx;
  border-radius: 50%;
}
.nametext{
  text-align: center;
  line-height: 38px;
}

.concernlist>view {
  display: flex;
  align-items: center;
}

.concernmes {
  margin-left: 30rpx;
}

.concernmes>view:first-child {
  font-size: 26rpx;
  color: #030303;
}

.concernmes>view:last-child {
  font-size: 22rpx;
  color: #666;
}
