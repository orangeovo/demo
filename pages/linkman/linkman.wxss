/* pages/linkman/linkman.wxss */
.value-class {
  flex: none !important;
}

.cellbox {
  display: flex;
  align-items: center;
}

.cardlist {
  box-sizing: border-box;
  padding: 0 30rpx;
  background-color: #fff;
}

.initials {
  font-size: 30rpx;
  color: #999;
  background-color: #F4F4F4;
}

.datalistitem {
  margin-left: 30rpx;
}

.datalistitem>view:first-child {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  color: #333333;
}

.datalistitem>view:last-child {
  font-size: 24rpx;
  color: #666;
  font-family: PingFang SC;
  font-weight: 500;
  color: #666666;
}

.avatar {
  width: 76rpx;
  height: 76rpx;
  text-align: center;
  line-height: 76rpx;
  border-radius: 10rpx;
  margin-left: 20rpx;
}

.datalist {
  display: flex;
  align-items: center;
  background: #fff;
  border-bottom: 1rpx solid #eee;
  height: 130rpx;
}

.succc {
  position: fixed;
  bottom: 10rpx;
  width: 90vw;
  left: 5vw;
  height: 80rpx;
  line-height:80rpx;
  font-size: 34rpx;
  background-color: #1559F3;
  color: #fff;
  text-align: center;
  border-radius: 25rpx;

}

.pitchBox {
  display: flex;
}
.invisibleblock{
  height: 80rpx;
  width: 100vw;
}