/* pages/savetomail/savetomail.wxss */
.holdertitle{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 88rpx;
  box-sizing: border-box;
  padding: 10rpx 0;
  background: #fff;
}
.search{
  margin: 0 70rpx;
  padding: 10rpx;
  text-align: center;
  border-radius: 33rpx;
  background: #F2F2F2;
}
.search input{
  font-size: 26rpx;
}
.plhc{
  font-size: 26rpx;
}
.cardlist{
  margin: 88rpx 0 13vh 0;
}
.cardlist image{
  width: 76rpx;
  height: 76rpx;
  border: 1rpx solid #ddd;
  border-radius: 10rpx;
}
.cardlistitem>view{
  padding: 20rpx 30rpx;
}
.datalist{
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #fff;
  border-bottom: 1rpx solid #eee;
}
.initials{
  font-size: 30rpx;
  color: #999;
}
.datalistitem{
  margin-left: 30rpx;
}
.datalistitem>view:first-child{
  font-size: 28rpx;
  color: #333;
}
.datalistitem>view:last-child{
  font-size: 24rpx;
  color: #666;
}
.total{
  margin: 20rpx auto;
  text-align: center;
  font-size: 24rpx;
  color: #999;
}
.circle{
  width: 36rpx;
  height: 36rpx;
  border: 1rpx solid #ccc;
  border-radius: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.choose{
  background: #0AA3EF;
  border: 1rpx solid #0AA3EF;
}
.savebtn{
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 13vh;
  color: #fff;
  background: #FAFAFA;
  display: flex;
  justify-content: center;
  align-items: center;
}
.savebtn view{
  width: 630rpx;
  height: 88rpx;
  background: #0AA3EF;
  border-radius: 20rpx;
  text-align: center;
  line-height: 88rpx;
}
.savebtn view:active{
  opacity: .7;
}
.avatar{
  width: 85rpx;
  height: 85rpx;
  text-align: center;
  line-height: 85rpx;
}
