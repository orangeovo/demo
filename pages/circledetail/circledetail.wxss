/* pages/circledetail/circledetail.wxss */
.circledetailbox {
  background-color: #1559F3;
}

.icons {
  height: 150rpx;
  display: flex;
  justify-content: space-evenly;
  align-items: center;
}

.icons>view {
  display: flex;
  display:-webkit-flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  -webkit-flex-direction:column;
}

.icons>view .iconfont {
  font-size: 48rpx;
  color: #fff;
}

.icons>view .txt {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
}

.cell {
  height: 130rpx;
}

.avatar {
  border-radius: 10rpx;
  overflow: hidden;
}

.suoxie {
  height: 71rpx;
  letter-spacing: 3rpx;

  line-height: 71rpx;
}

.suoxiefont {
  margin-left: 30rpx;
  color: rgba(153, 153, 153, 1);
  font-size: 30rpx;
}

.suoxieiamge {
  height: 76rpx;
  width: 76rpx;
  border-radius: 10rpx;
  margin-left: 32rpx;
  margin-right: 22rpx;
}

.suoxieitem {
  display: flex;
  align-items: center;
  height: 130rpx;
  width: 100vw;
  justify-content: space-between;
  background-color: white;
}

.total {
  margin: 20rpx auto;
  text-align: center;
  font-size: 24rpx;
  color: #999;
}

.circledetail-btnbox-icons {
  font-size: 32rpx;
  color: #0AA3EF
}

.circledetail-cardlist-item {
  display: flex;
  flex-direction: row;
  align-items: center;

}

.circledetail-cardlist-item-textbox {
  display: flex;
  flex-direction: column;
  margin-top: 5rpx;
}

.circledetail-cardlist-item-textbox-name {
  font-size: 28rpx;
}

.circledetail-cardlist-item-textbox-info {
  font-size: 24rpx;
  color: rgba(102, 102, 102, 1);
  margin-top: -30rpx;
}

.circledetail-cardlist-item-rightarea {
  color: rgba(153, 153, 153, 1);
  font-size: 26rpx;
}

.circledetail-cardlist-item-rightarea-icon {
  margin-top: -4rpx;
  margin-right: 30rpx;
  font-size: 30rpx;
}

.title-box {
  display: flex;
  align-items: center;
}

.van-cell-text {
  margin-left: 15rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.mycard-popup {
  height: 30vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 30rpx;
  margin-top: 20rpx;
}

.share-btn {
  background-color: rgb(255, 255, 255);
}

.share-btn::after {
  border: none;
}

.swiper {
  width: 690rpx;
  height: 300rpx;
}

.swiper-item {
  width: 690rpx;
  border-radius: 20rpx 20rpx 0 0;
}

.popbody {
  display: flex;
  margin-top: 70rpx;
}

.popicon {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.righticon {
  margin-right: 200rpx;
}

.popbtn {
  height: 93rpx;
  width: 93rpx;
  border-radius: 46.5rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 26rpx;
  margin-bottom: 27rpx;
}

.oricon {
  background-color: RGB(252, 149, 19);
}

.poptxt {
  font-size: 26rpx;
  color: rgba(51, 51, 51, 1);
}

.icon-a-weixin2 {
  color: RGB(40, 196, 69);
  font-size: 93rpx;
}

.icon-haibao {
  color: white;
  font-size: 55rpx;
}

.gongxubox {
  position: relative;
}

.quanzibox {
  position: relative;
}

.dot {
  width: 10rpx;
  height: 10rpx;
  background-color: red;
  border-radius: 50%;
  position: absolute;
  left: 68rpx;
  top: 10rpx;
}
.dot2{
  width: 10rpx;
  height: 10rpx;
  background-color: red;
  border-radius: 50%;
  position: absolute;
  left: 80rpx;
  top: 10rpx;
}