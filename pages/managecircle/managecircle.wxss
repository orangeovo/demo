.createcirclehead{
  height: 269rpx;
  width: 100vw;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  letter-spacing: 3rpx;
}
.portraitbox{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  background-color: rgba(51, 51, 51, 1);
  display: flex;
  align-items: center;
  justify-content: center;
  
}
.createcircleinfo{
  letter-spacing: 3rpx;
  width: 100vw;
  height: 675rpx;
  background-color: white;
}
.portraittext{
  margin-top: 61rpx;
  width: 100vw;
  text-align: start;
  padding-left: 64rpx;
  color: rgba(153, 153, 153, 1);
  font-size: 30rpx;
}
.createcircleitem{
  display: flex;
  flex-wrap: nowrap;
  height: 100rpx;
