/* pages/circleindex/circleindex.wxss */
.page {
    overflow: hidden;
    display: flex;
    min-height: 100vh;
    flex-direction: column;
}
.login-page{
    min-height: 100vh;
    width: 750rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.createcircle {
    height: 79.7rpx;
    background-color: white;
    width: 690rpx;
    justify-content: center;
    /* background: seagreen; */
    margin: 0 auto;
    border-radius: 40rpx;
    display: flex;
    align-items: center;
    margin-top: 30rpx;
}

.createcircle .txt {
    font-size: 28rpx;
    font-family: PingFang SC;
    font-weight: 500;
    color: #333333;
}
.van-swipe-cell__left,
.van-swipe-cell__right {
  display: inline-block;
  width: 65px;
  height: 65px;
  font-size: 15px;
  line-height: 65px;
  color: #fff;
  text-align: center;
  background-color: #1989fa;
}


.circleicon {
    font-size: 33rpx;
    color: RGBA(18, 166, 240, 1);
}

.circular {
    width: 41rpx;
    height: 41rpx;
    border-radius: 50%;
    background: linear-gradient(135deg, #6B98FF, #1559F3);
    display: flex;
    align-items: center;
    justify-content: center;
    margin-left: 30rpx;
    margin-right: 20rpx;
}

.circular .iconfont {
    font-size: 28rpx;
    color: #fff;
}

.suoxie {
    letter-spacing: 3rpx;
    height: auto;
    line-height: 71rpx;
}

.suoxiefont {
    margin-left: 30rpx;
    color: rgba(153, 153, 153, 1);
    font-size: 30rpx;
}

.suoxieiamge {
    height: 76rpx;
    width: 76rpx;
    border-radius: 10rpx;
    margin-left: 32rpx;
    margin-right: 22rpx;
}

.suoxieitem {
    display: flex;
    align-items: center;
    height: 130rpx;
    width: 100vw;
    justify-content: space-between;
    background-color: white;
}

.circlelist-item {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.circlelist-item-textbox {
    display: flex;
    flex-direction: column;
    margin-top: 5rpx;

}

.circlelist-item-textbox-name {
    font-size: 28rpx;
}

.circlelist-item-textbox-time {
    font-size: 24rpx;
    color: rgba(102, 102, 102, 1);
    margin-top: -30rpx;

}

.circlelist-item-rightblock {
    color: rgba(153, 153, 153, 1);
    font-size: 26rpx;
}

.circlelist-item-rightblock-icon {
    margin-top: -4rpx;
    margin-right: 30rpx;
    font-size: 30rpx;
}

.title-box {
    display: flex;
    align-items: center;
    position: relative;
}

.number-length{
    position: absolute;
    right:10rpx;
}

.listData .van-cell__title {
    flex: 3;
}

.createTime {
    font-size: 24rpx;
    font-family: PingFang SC;
    display: flex;
    font-weight: 500;
    color: #666666;
    max-width: 500rpx;
    /* background-color: seagreen; */
}

.createTime view{
    margin-right: 10rpx;
}


.van-cell-text {
    margin-left: 15rpx;
}

.cell {
    width: 692rpx !important;
    height: 130rpx;
    /* background: seagreen !important; */
    border-radius: 11rpx;
    /* margin: 0 30rpx; */
}

.item-box{
    margin: 0 30rpx;
    border-radius: 11rpx;
    background: white;
}

.avatar {
    border-radius: 10rpx;
    overflow: hidden;
}

.header {
    display: flex;
    align-items: center;
    font-size: 27rpx;
    font-weight: bold;
    font-family: 'PingFang Sc';
}

.haederUser {
    width: 66rpx;
    height: 38rpx;
    line-height: 38rpx;
    background: #EDCBA6;
    border-radius: 10rpx;
    font-size: 24rpx;
    color: #613F1C;
    text-align: center;
    font-weight: bold;
    font-size: 22rpx;
    margin-right: 20rpx;

}

.dot {
    width: 10rpx;
    height: 10rpx;
    background-color: red;
    border-radius: 50%;
    margin-left: 10rpx;
    margin-top: -20rpx;
    /* position: absolute;
    left: 68rpx;
    top: 10rpx; */
}
.cornorMark{
    position:absolute;
    background: rgb(242, 109, 38);
    border:1px solid rgb(242, 109, 38);
    border-radius: 100px;
    width:30rpx;
    height:30rpx;
    top:0rpx;
    left: 90rpx;
    color:#fff;
    font-size: 12px;
    text-align: center;
  }
  .cornorMark text{
    position:absolute;
    width:100%;
    left:0%;
    text-align: center;
    top:-4px;
  }
.no-login{
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
}
