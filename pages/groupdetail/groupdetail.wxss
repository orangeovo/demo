/* pages/cardholder/cardholder.wxss */
.imgDisposeBlock {
  position: fixed;
  width: 100%;
  height: 100vh;
  z-index: 99;
  top: 0;
}

.imgDisposeArea {
  height: 88vh;
  overflow: hidden;
}

.imgDisposeControlLine {
  height: 12vh;
  display: flex;
  align-items: center;
  justify-content: space-around;
  background: rgba(0, 0, 0, 1);
  color: #fff;
}

.editBtn {
  width: 180rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  border: 2rpx solid #fff;
  border-radius: 50rpx;
  font-size: 26rpx;
}
.holdertitle{
    position: fixed;
    top: 0;
    left: 0;
    width: 750rpx;
    box-sizing: border-box;
    padding: 0 30rpx;
    z-index: 10;
    background: #1559F3;
    height: 300rpx;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    justify-content: space-evenly;
  }
  .plhc{
    font-size: 26rpx;
  }
    .icons{
        display: flex;
        justify-content: space-between;
        align-items: center;
        box-sizing: border-box;
        padding: 0 30rpx;
    }
    .icons>view{
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }
    .icons>view .iconfont{
        font-size: 52rpx;
        color: #fff;
    }
    .icons>view .txt{
        font-size: 24rpx;
        font-family: PingFang SC;
        font-weight: 500;
        color: #FFFFFF;
    }
  .cardlist{
    margin-top: 300rpx;
  }
  .cardlist image{
    width: 76rpx;
    height: 76rpx;
    border: 1rpx solid #ddd;
    border-radius: 10rpx;
  }
  .cardlistitem>view{
    padding: 20rpx 30rpx;
  }
  .datalist{
    display: flex;
    align-items: center;
    background: #fff;
      box-sizing: border-box;
  }
    .initials{
        height: 70rpx;
        font-size: 30rpx;
        font-family: PingFang SC;
        font-weight: 500;
        line-height: 70rpx;
        box-sizing: border-box;
        padding-left: 30rpx;
        color: #999999;
    }
  .datalistitem{
    margin-left: 30rpx;
  }
  .datalistitem>view:first-child{
    font-size: 28rpx;
    color: #333;
  }
  .datalistitem>view:last-child{
    font-size: 24rpx;
    color: #666;
  }
  .total{
    padding: 20rpx;
    text-align: center;
    font-size: 24rpx;
    color: #999;
  }
  .avatar{
    width: 85rpx;
    height: 85rpx;
    text-align: center;
    line-height: 85rpx;
  }
  .mycard-popup{
    height: 30vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    font-size: 30rpx;
    margin-top: 20rpx;
}
.share-btn{
    background-color: rgb(255, 255, 255);
}
.share-btn::after{
    border: none;
}
.swiper{
    width: 690rpx;
    height: 300rpx;
}
.swiper-item{
    width: 690rpx;
    border-radius: 20rpx 20rpx 0 0;
}
.popbody{
    display: flex;
    margin-top: 70rpx;
}
.popicon{
    display: flex;
    flex-direction: column;
    align-items: center;
}
.righticon{
    margin-right: 200rpx;
}
.popbtn{
    height: 93rpx;
    width: 93rpx;
    border-radius: 46.5rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 26rpx;
    margin-bottom: 27rpx;
}
.oricon{
    background-color: RGB(252, 149, 19);
}
.poptxt{
    font-size: 26rpx;
    color: rgba(51, 51, 51, 1);
}
.icon-a-weixin2{
  color: RGB(40, 196, 69);
  font-size: 93rpx;
}
.icon-haibao{
  color:white;
  font-size: 55rpx;
}
