/* pages/setgroup/setgroup.wxss */
.invisibleblock{
  height: 800rpx;
  width: 100vw;
}
.newgroup{
  margin: 30rpx 0;
  display: flex;
  align-items: center;
  background: #fff;
  padding: 20rpx 30rpx;
  height: 100rpx;
  box-sizing: border-box;
}
.newgroup .iconfont{
  width: 52rpx;
  height: 52rpx;
  background: linear-gradient(135deg, #6B98FF, #1559F3);
  border-radius: 50%;
  font-size: 28rpx;
  color: #fff;
  text-align: center;
  line-height: 52rpx;
  margin-right: 20rpx;
}
.ic{
  width: 66rpx;
  height: 66rpx;
  background: #0AA3EF10;
  border-radius: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 30rpx;
  font-size: 28rpx;
  color: #333;
}
.groupbox{
  background: #fff;
  max-height: 74vh;
  overflow: auto;
}
.groupbox>view{
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}
.groupbox image{
  width: 76rpx;
  height: 76rpx;
  border-radius: 10rpx;
  border: 1rpx solid #ddd;
}
.mesbox{
  margin: 0 30rpx;
}
.mesbox>view:first-child{
  font-size: 28rpx;
  color: #333;
}
.mesbox>view:last-child{
  font-size: 24rpx;
  color: #666;
}
.circle{
  width: 36rpx;
  height: 36rpx;
  border: 1rpx solid #ccc;
  border-radius: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.choose{
  background: #0AA3EF;
  border: 1rpx solid #0AA3EF;
}
.savebtn{
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 148rpx;
  background: #FAFAFA;
  text-align: center;
  padding: 30rpx;
  box-sizing: border-box;
}
.savebtn>view{
  width: 630rpx;
  height: 88rpx;
  border-radius: 20rpx;
  margin: auto;
  background: #1559F3;
  color: #fff;
  line-height: 88rpx;
}
.savebtn>view:active{
  opacity: .7;
}
.suoxieitem{
  display: flex;
  align-items: center;
  height: 130rpx;
  width: 750rpx;
  justify-content: space-between;
  background-color: white;
  padding: 0 30rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #EEEEEE;
}
.suoxiefont{
  margin-left: 30rpx;
  color: rgba(153, 153, 153, 1);
  font-size: 30rpx;
}
.suoxieiamge{
  height: 76rpx;
  width: 76rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
}

.circlelist-item{
  display: flex;
  align-items: center;
}
.circlelist-item-textbox{
  display: flex;
  flex-direction: column;
  margin-top: 5rpx;

}
.circlelist-item-textbox-name{
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333333;
}
.circlelist-item-textbox-time{
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #666666;
}
.circlelist-item-rightblock{
  color: rgba(153, 153, 153, 1
  );font-size: 26rpx;
}
.circlelist-item-rightblock-icon{
  margin-top: -4rpx;margin-right: 30rpx;font-size: 30rpx;
}
radio-group{
  margin-bottom: 140rpx;
}
